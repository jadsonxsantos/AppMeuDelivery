<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"       
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
             x:Class="DeLivre.MainPage" BackgroundImage="fundoapp">

    <StackLayout>
        <StackLayout>
            <controls:CircleImage 
                      Source="logotipo_color.png" Margin="0,5,0,0" 
                      HeightRequest="100" Aspect="AspectFit"
                      HorizontalOptions="CenterAndExpand" 
                      BorderColor="White" BorderThickness="1" />

            <Label x:Name="lbCidade"
                   Text="Qual sua cidade?" 
                   Margin="5,-5,5,10"
                   FontSize="29" FontAttributes="Bold"
                   TextColor="#E53935"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand" />

            <!--<ScrollView HeightRequest="200">-->
            <StackLayout HeightRequest="200">
                <Button x:Name="btnPinhao"
                            Text="PINHÃO/SE" FontAttributes="Bold"
                            TextColor="White"
                            BorderRadius="18" 
                            WidthRequest="230"
                            HeightRequest="50"
                            Margin="5,0,5,0" 
                            FontSize="25"
                            Clicked="BtnPinhao_Clicked"
                            BackgroundColor="#E53935"
                            HorizontalOptions="Center" 
                            VerticalOptions="Center">
                </Button>

                <Button x:Name="btnItabaiana"
                            Text="ITABAIANA/SE" FontAttributes="Bold"
                            TextColor="White"
                            BorderRadius="18" 
                            WidthRequest="230"
                            HeightRequest="50"
                            Margin="5,0,5,0" 
                            FontSize="25" IsVisible="True"
                            Clicked="BtnItabaiana_Clicked"
                            BackgroundColor="#E53935"
                            HorizontalOptions="Center" 
                            VerticalOptions="Center"/>

                <Button x:Name="btnEstancia"
                            Text="ESTÂNCIA/SE" FontAttributes="Bold"
                            TextColor="White"
                            BorderRadius="18" 
                            WidthRequest="230"
                            HeightRequest="50"
                            Margin="5,0,5,0" 
                            FontSize="25" IsVisible="false"
                            Clicked="BtnEstancia_Clicked"
                            BackgroundColor="#E53935"
                            HorizontalOptions="Center" 
                            VerticalOptions="Center"/>
                
                <Button x:Name="btnAracaju"
                            Text="ARACAJU/SE" FontAttributes="Bold"
                            TextColor="White"
                            BorderRadius="18" 
                            WidthRequest="230"
                            HeightRequest="50"
                            Margin="5,0,5,0" 
                            FontSize="25" IsVisible="False"
                            Clicked="BtnAracaju_Clicked"
                            BackgroundColor="#E53935"
                            HorizontalOptions="Center" 
                            VerticalOptions="Center"/>
                

                <Button x:Name="btnTimon"
                            Text="TIMON/MA" FontAttributes="Bold"
                            TextColor="White"
                            BorderRadius="18" 
                            WidthRequest="230"
                            HeightRequest="50"
                            Margin="5,0,5,0" 
                            FontSize="25" IsVisible="False"
                            Clicked="BtnTimon_Clicked"
                            BackgroundColor="#E53935"
                            HorizontalOptions="Center" 
                            VerticalOptions="Center"/>

            </StackLayout>
            <!--</ScrollView>-->
        </StackLayout>
        <Button x:Name="btn_Parceria" FontSize="15"
                Text="MEU ESTABELECIMENTO NO APP?"
                TextColor="White" BorderRadius="10"                 
                WidthRequest="300" HeightRequest="40"                
                Margin="5,100,5,0" BackgroundColor="#E53935"                
                Clicked="Btn_Parceria_Clicked"                
                HorizontalOptions="Center" 
                VerticalOptions="End"/>
    </StackLayout>
</ContentPage>
